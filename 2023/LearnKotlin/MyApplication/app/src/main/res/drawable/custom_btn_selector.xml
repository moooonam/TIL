<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="#68E1ED" />
            <corners android:radius="30dp" />
            <size android:width="200dp" android:height="70dp" />
            <stroke android:width="3dp" android:color="#3F51B5" />
            <gradient android:endColor="#46F830FF" android:startColor="#26E410" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="#68E1ED" />
            <corners android:radius="30dp" />
            <size android:width="200dp" android:height="70dp" />
            <stroke android:width="3dp" android:color="#EB1541" />
            <gradient android:endColor="#46F830FF" android:startColor="#26E410" />
        </shape>
    </item>
</selector>